page {
    background-color: white;
    height: 100%;
}

.book-intro{
    background-color: #000000;
    padding: 100rpx 0;
    color: white;
    text-align: center;
    width: 100%;
}

.book-name{
    color: #FFFFFF;
    text-align: center;
    font-size: 50rpx;
    width:96%;
    padding-left: 2%;
}

.book-author{
    color: #949494;
    text-align: center;
    font-size: 30rpx;
    font-style: italic;
    padding-top: 20rpx;
}

.detail-cells {
    font-size: 30rpx;
    margin-top:20rpx;
    border-top: 1px solid #E5E5E5;
    border-bottom: 1px solid #E5E5E5;
    width: 100%;
}


.detail-cell {
    background-color: white;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    padding-left: 30rpx;
}

.book-code {
    font-size: 25rpx;
    font-weight: bolder;
    color: #999999;
}

.empty-book {
    font-size: 25rpx;
    font-weight: bolder;
    color: orangered;
}

.book-place {
    font-weight: 400;
    font-size: 32rpx;
    width: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
    padding-bottom: 15rpx;
}

.book-status {
    color: #999999;
    font-size: 25rpx;
    line-height: 1.2;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
}

.detail-bd {
    border-top: 1px solid #E5E5E5;
}

.loading {
    text-align: center;
    width: 100%;
    height: 100%;
    color: #999999;
    font-size: 32rpx;
    background-color: #000000
}

.loading-image {
    width:100%; 
    padding-top:50%;
}

.loading-image image {
    width: 200rpx; 
    height: 200rpx;
}

.result-list {
    width: 100%;
    align-items: center;
}

.return-btn{
  color: white;
  background-color: #04BE02;
  border: none;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.return-to-index {
  align-items: center;
  width: 98%;
  padding-left:1%;
  padding-top: 20rpx
}
